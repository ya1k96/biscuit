<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2> {{ imagen.titulo }} </h2>
        <button class="btn btn-danger" id="btn-delete" data-id="{{ imagen.uniqueId }}">
            <i class="far fa-trash-alt"></i>
        </button>
    </div>
    <div class="card-body">
        <div class="text-center">
        <p> {{ imagen.descripcion }} </p>
        <img class="img-fluid" src="/public/upload/{{ imagen.archivo }}" alt="">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button class="btn btn-outline-danger" id="btn-like" data-id="{{ imagen.uniqueId }}">
            <i class="far fa-heart"></i>
        </button>
        <p>
            <i class="fas fa-heart"></i>
            <span class="like-count"> {{ imagen.like }} </span>
            <i class="fa fa-eye"></i> {{ imagen.vistas }}            
            <i class="far fa-clock"> 
            </i>
            {{ time_ago imagen.fecha }}             
        </p>
    </div>
    <div class="card mt-2">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3>Comentarios</h3>
            <button class="btn btn-info">
                <i class="fa fa-comment-o"></i> Comentar
            </button>
        </div>
        <div class="card-body">
            <blockquote>
                <form action="/image/{{ imagen.uniqueId }}/comment" method="POST">
                    <div class="form-group">
                        <input type="text" name="nombre" class="form-control" placeholder="Nombre">
                    </div>
                    <div class="form-group">
                        <input type="text" name="email" class="form-control" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <textarea name="comentario" id="" cols="2" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success">
                            <i class="fa fa-comment"></i> enviar
                        </button>
                    </div>
                </form>
            </blockquote>
            <ul class="list-group p-4">
                {{#each comentarios }}
                <li class="list-group-item">
                    <div class="row">
                        <a href="">
                            <img src="https://gravatar.com/avatar/{{ gravatar }}?d=monsterid&s=45" alt="">
                        </a>
                        <blockquote>
                        <p class="ml-2"> <span class="badge badge-info"> {{ nombre }} </span> <br>{{ comentario }} </p>
                        <p class="blockquote-footer"> {{ time_ago fecha }} </p>    
                        </blockquote>
                    </div>
                </li>  
                {{/each }}
            </ul>
        </div>
    </div>
</div>